# ==========================================
# WalkMate Project Environment Variables
# Copy this file to `.env` before running.
# ==========================================

# -----------------
# 1. Backend Config
# -----------------
# Connection string for the PostgreSQL database via Docker
DATABASE_URL=postgresql://walkmate_user:walkmate_pass@localhost:5432/walkmate_db

# Connection string for Redis Container
REDIS_URL=redis://localhost:6379/0

# Supabase API keys (for Real-time connections, if used directly by backend)
SUPABASE_URL=https://[YOUR_SUPABASE_PROJECT_ID].supabase.co
SUPABASE_SERVICE_ROLE_KEY=[YOUR_SUPABASE_SERVICE_KEY]

# JWT Secret Key for authentications via FastAPI
SECRET_KEY=[YOUR_SECRET_KEY_HERE]
ALGORITHM=HS256

# Base CORS origins
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ------------------
# 2. Frontend Config
# ------------------
# Usually, frontend values must be prefixed depending on framework:
# e.g., VITE_SUPABASE_URL for Vite/React

VITE_SUPABASE_URL=https://[YOUR_SUPABASE_PROJECT_ID].supabase.co
VITE_SUPABASE_ANON_KEY=[YOUR_SUPABASE_ANON_KEY]

# Target API URL for Frontend requests
VITE_BACKEND_URL=http://localhost:8000
